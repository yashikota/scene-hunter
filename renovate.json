{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>aquaproj/aqua-renovate-config#2.9.0",
    "group:allNonMajor",
    "config:best-practices",
    ":disableRateLimiting",
    ":label(renovate)",
    ":timezone(Asia/Tokyo)"
  ],
  "configMigration": true,
  "minimumReleaseAge": "7 days",
  "dependencyDashboard": false,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "labels": [
        "docker-update"
      ],
      "matchUpdateTypes": [
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "aquaproj/aqua-registry"
      ],
      "extends": [
        "schedule:earlyMondays"
      ]
    }
  ]
}
